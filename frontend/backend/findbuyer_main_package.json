{
  "name": "findbuyer",
  "version": "1.0.0",
  "description": "ðŸš€ Revolutionary buyer-centric marketplace that reverses 500 years of seller-centric trade paradigm",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "deploy": "npm run build && npm run deploy:vercel",
    "deploy:vercel": "cd frontend && npx vercel --prod"
  },
  "keywords": [
    "marketplace",
    "e-commerce",
    "buyer-centric",
    "ai-powered",
    "react",
    "nodejs",
    "real-time",
    "clustering",
    "global-commerce",
    "revolutionary",
    "findbuyer"
  ],
  "author": {
    "name": "Ben Simyapayzeka",
    "email": "bensimyapayzeka@gmail.com",
    "url": "https://github.com/kemoagaben"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kemoagaben/findbuyer.git"
  },
  "bugs": {
    "url": "https://github.com/kemoagaben/findbuyer/issues"
  },
  "homepage": "https://findbuyer.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ]
}